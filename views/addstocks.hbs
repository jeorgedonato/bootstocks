<div class="container">
  <h1 style="margin-top: 40px;" class="text-center">
    Add a Stock to your Portfolio
  </h1>
  <div class="row">
    <div class="col-6">
      <br />
      <form class="add-stock-form">
        <div style="display: none" id="alert" class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Error:</span> <span class="msg"></span>
        </div>
        <div class="input-group">
          <input type="text" class="form-control " id="stock-symbol" placeholder="Stock Search" />
          <div class="input-group-append">
            <button class="btn btn-primary" id="search-ticker-btn" type="button">
              Search Stock/Ticker
              <i class="fa fa-search" aria-hidden="true"></i>
            </button>
          </div>
        </div>
        <div class="form-group mt-2">
          <input type="input" disabled="disabled" class="form-control " id="stock-ticker" placeholder="Stock Symbol" />
        </div>
        <div class="input-group mt-2">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">$</span>
          </div>
          <input type="input" disabled="disabled" class="form-control " id="buying-price" placeholder="Buying Price" />
        </div>
        <div class="input-group mt-2">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Category</span>
          </div>
          <select class="form-control" id="category-select"></select>
        </div>
        <div class="form-group mt-2">
          <input type="number" class="form-control " id="quantity" placeholder="Quantity" />
        </div>
        <div class="input-group mt-2">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Total $</span>
          </div>
          <input type="input" disabled="disabled" class="form-control " id="total" placeholder="Total Price" />
        </div>
        <div class="submit-container float-right mt-2">
          <div id="spinner-submit" class="spinner-border text-primary" role="status" style="display: none;">
            <span class="sr-only">Loading...</span>
          </div>
          <button type="submit" id="submit-stock-btn" class="btn btn-secondary ">
            Submit Order
            <i class="fa fa-check-square" aria-hidden="true"></i>
          </button>
        </div>

      </form>
    </div>
    <div class="col-6 mt-3">
      <div class="stockSelectDiv form-group" style="display: none;">
        <label for="exampleFormControlSelect2">Select from these Symbols</label>
        <select multiple class="form-control" id="multipleStockSelect">
        </select>
      </div>
      </form>
    </div>
  </div>
</div>
