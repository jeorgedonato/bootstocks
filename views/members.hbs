<div class="jumbotron">
  <h1 class="display-4" style="text-align: center;"><strong>Welcome <span id='member-name'></span>!</strong></h1>
  <p class="lead" style="text-align: center;">View your portfolio, or add/sell stocks</p>
</div>

<div class="container mb-5">
  <div class="stock-sold-alert alert alert-success text-center" style="display: none;"></div>
  <div class="invalid-alert alert alert-danger text-center" style="display: none;"></div>
  <div id="stock-table-display" style="display: none;">
    <h1 style="text-align: center;">Your Portfolio</h1>
    <br />
    <form class="float-right">
      <label for="categories">Select a Stock Category:</label>
      <select id="changeCategory">
        <option selected value="0">View All</option>
      </select>
    </form>

    <br />
    <br />

    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead style="font-size: 15px;">
          <tr>
            <th>Stock Symbol</th>
            <th>Category</th>
            <th>Stock Quantity</th>
            <th>Buying Price</th>
            <th>Total</th>
            <th>Stock Gain</th>
            <th>Purchase Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody class="stock-tbody"></tbody>
      </table>
      <span style="display: block;font-size: 2em;text-align: center;" id="span-result"></span>
    </div>
  </div>


  <div style="float: right;">
    <label for="categories" style="font-size: 18px; color: black;">Enter Stock Symbol:</label>
    <input class="chart-input" type="text" id="ticker-input" placeholder="ex. FB, AAPL, MSFT">
  </div>


  <canvas id="stockChart" width="400" height="100"></canvas>
</div>
<br /><br />

<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class=" modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        <button id="proceed-sell" data-id="" data-symbol="" type="button" class="btn btn-danger"></button>
      </div>
    </div>
  </div>
</div>



